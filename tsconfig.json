{
  "compilerOptions": {
      "allowJs": true,
      "module": "commonjs",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./lib",
      "sourceMap": true,
      "target": "es2017",
  },
  "include": [
      "src/**/*",
      "index.d.ts"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
